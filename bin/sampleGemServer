usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name> [--help] [--register=<gem-server-name> \
                      [--type=zinc|fastcgi|swazoo] [--port=<port-number>] \
                      [--start=<gem-server-name>] [--stop=<gem-server-name>] \
                      [--restart=<gem-server-name>]
Register/start/stop/restart a webServer.

OPTIONS
  -h show usage
  --help                       show gemServer tODE script help
  --register=<gem-server-name> register gemserver as <gem-server-name>
  --type=zinc|fastcgi|swazoo   choose type of webServer to register. zinc is best choice for development.
  --port=<port-number>         define http port
  --start=<gem-server-name>    start the named gem server
  --stop=<gem-server-name>     stop the named gem server
  --restart=<gem-server-name>  restart the named gem server

EXAMPLES
  $(basename $0) -h
  $(basename $0) sample --register=sample --type=zinc --port=8686
  $(basename $0) sample --restart=sample
  $(basename $0) sample --stop=sample

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/shFunctions

getOpts_help $@ #parse standard (-h) options

stoneName="$1"
shift

$GS_HOME/bin/tode todeIt $stoneName << EOF
/home/sample/gemServer $*
EOF
