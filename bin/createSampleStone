sampleHomeBin=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name> <gemstone-version> 
Create a new stone named <stone-name> with tODE and Sample project installed.

OPTIONS
  -h display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) sample 3.2.4
"
HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/shFunctions
getOpts_help $@

if [ $# -ne 2 ]; then
  usage; exit 1
fi
stoneName="$1"
gsvers="$2"

$GS_HOME/bin/createTodeStone $stoneName $gsvers

$sampleHomeBin/installSampleStone $stoneName
